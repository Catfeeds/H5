<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>珠宝分类</title>
    {include file="public/base" /}
</head>

<body>
    <header class="mui-bar mui-bar-nav">
        <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
        <h1 class="mui-title">珠宝分类</h1>
    </header>
    <div class="mui-content">
        <div class="classifyTabs clear">
            <ul>
                <li>
                    <a href="#" :class="{red:isShowTitle}" @click="zycpClick">自有成品</a>
                </li>
                <li>
                    <a href="#" :class="{red:isShowTitle2}" @click="zydzClick">自有定制</a>
                </li>
                <li>
                    <a href="#" :class="{red:isShowTitle3}" @click="jpdzClick">精品定制</a>
                </li>
            </ul>
        </div>
        <div class="clear wap_all">
            <div class="tab-tit fl">
                <ul>
                    <li v-for="(item,index) in goodsCategory" @click="chgtab(index)" :class="{'active':index==num}">
                        {{item.name}}
                    </li>
                </ul>
            </div>
            <div class="tab-con fr">
                <div class="box_style" v-for="(item,index) in goodsCategory" v-show="index==num">
                    <a :href="adurl">
                        <img :src="adimg" alt="" width="100%">
                    </a>
                    <ul class="clear">
                        <li v-for="tab in goodsCategory[index].sub">
                            <a :href="'{:url('goods/goodsList')}?category_id='+[tab.id]+'&goods_type='+goods_type">
                                {{tab.name}}
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {include file="public/nav" /}
</body>
<script>
    new Vue({
        el: '.mui-content',
        data: {
            isShowTitle: true,
            isShowTitle2: false,
            isShowTitle3: false,
            num: 0,
            goodsCategory: [],
            adimg: "__IMG__/title_01.png",
            adurl: "",
            goods_type:3

        },
        mounted: function () {
            this.$nextTick(function () {
                this.getAd();
            })
        },
        created() {
            var _this = this;
            // 区分成品和定制
            axios.get(__apiurl + '/goods/getcategory', {
                    params: {
                        goods_type: 3
                    }
                })
                .then(response => {
                    _this.goodsCategory = response.data.data;
                    // console.log(_this.goodsCategory)
                })
                .catch(error => {
                    // console.log(error);
                    mui.alert('网络错误，不能访问');
                })

        },
        methods: {
            zycpClick() {
                this.isShowTitle = true;
                this.isShowTitle2 = false;
                this.isShowTitle3 = false;
                var _this = this;
                // 显示成品数据
                axios.get(__apiurl + '/goods/getcategory', {
                        params: {
                            goods_type: 3
                        }
                    })
                    .then(response => {
                        _this.goodsCategory = response.data.data;
                        _this.goods_type = 3;
                        // console.log(_this.goodsCategory)
                    })
                    .catch(error => {
                        // console.log(error);
                        mui.alert('网络错误，不能访问');
                    })
            },
            zydzClick() {
                this.isShowTitle = false;
                this.isShowTitle2 = true;
                this.isShowTitle3 = false;
                var _this = this;
                // 显示自有定制数据
                axios.get(__apiurl + '/goods/getcategory', {
                        params: {
                            goods_type: 4
                        }
                    })
                    .then(response => {
                        _this.goodsCategory = response.data.data;
                        _this.goods_type = 4;
                        // console.log(_this.goodsCategory)
                    })
                    .catch(error => {
                        console.log(error);
                        mui.alert('网络错误，不能访问');
                    })
            },
            // 显示精品定制数据
            jpdzClick () {
                this.isShowTitle = false;
                this.isShowTitle2 = false;
                this.isShowTitle3 = true;
                var _this = this;
                // 显示自有定制数据
                axios.get(__apiurl + '/goods/getcategory', {
                        params: {
                            goods_type: 5
                        }
                    })
                    .then(response => {
                        _this.goodsCategory = response.data.data;
                        _this.goods_type = 5;
                        // console.log(_this.goodsCategory)
                    })
                    .catch(error => {
                        // console.log(error);
                        mui.alert('网络错误，不能访问');
                    })
            },
            //获取分类广告
            getAd() {
                var _this = this;
                axios.get(__apiurl + '/goods/getcatead')
                    .then(response => {
                        _this.adurl = response.data.data.url;
                        _this.adimg = response.data.data.images;
                        // console.log(_this.adimg)
                    })
                    .catch(error => {
                        // console.log(error);
                        mui.alert('网络错误，不能访问');
                    })
            },
            /*标签切换*/
            chgtab(index) {
                this.num = index;
            }

        },
    })
</script>

</html>