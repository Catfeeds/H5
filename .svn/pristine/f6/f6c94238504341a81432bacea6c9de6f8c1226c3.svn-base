<script>
        
$(function () {
	
    $('.addClick').on('tap',  function () {
        if (getToken() == '') {
            mui.alert('请先登录', function () {
                window.location.href = "{:url('com/login')}"
            });
            return false;
        }
    });

    $('.addUserClick').on('tap', function () {
        if (getToken() == '') {
            mui.alert('请先登录', function () {
                window.location.href = "{:url('com/login')}"
            });
            return false;
        }
    })
	
});


</script>
		