</div>

</body>
<script src="__MOBILE__/js/mint-ui.js?__Version__"></script>
<script>
    /*图片懒加载*/
    Vue.use(VueLazyload, {
        preLoad: 1.3,
        error: "错误",
        loading: '',
        attempt: 1
    });

    let picker = new mui.PopPicker({
        layer: 1
    });
    picker.hide();

    let vm = new Vue({
        el: '#details',
        components: {},
        data() {
            return {
                number: 0,
                num: 1,
                id: '',
                goodsName: '',
                goodsPrice: '',
                goodsCode: '',
                goodsStockNum: '',
                token: '',
                goodsAttr: [],
                goodsId: '',
                str: [],
                zhushiList: [],
                caiziList: [],
                shoucunList: [],
                shape: '',
                weight: '',
                isactive: 0, //材质默认选中
                thumb: '',  // 缩略图
                isActive: 0, //主石默认选中
                detailsShow: false,
                peishiList: "",
                shoucun: '',
            }
        },
        filters: {
            //保留2位小数点过滤器 不四舍五入
            number(value) {
                let toFixedNum = Number(value).toFixed(3);
                let realVal = toFixedNum.substring(0, toFixedNum.toString().length - 1);
                return realVal;
            }
        },
        created() {
            this.token = getToken();
            this.id = getUrlParam("id");
            //购物车数据  只取购物车总数
            // axios({
            //     method: 'GET',
            //     url: __apiurl + '/cart/index',
            //     headers: {
            //         Accept: "application/json; charset=utf-8",
            //         Token: this.token
            //     }
            // }).then(res => {
            //     if(res.status==200){
            //         // console.log(res.data.data.total_num)
            //         this.cartnum=res.data.data.total_num;
            //     }
            // }).catch(error => {
            //     mui.alert(error)
            // })

            /*获取下单通商品详情*/
            axios.get(__apiurl + '/goods/xdtdetails', {
                params: {
                    id: this.id,
                }
            }).then(res => {
                this.goodsName = res.data.data.name; //商品名称
                this.goodsPrice = res.data.data.price; //商品价格
                this.thumb = res.data.data.thumb; //商品图片
                this.goodsStockNum = res.data.data.stock_num; //商品库存
                this.goodsCode = res.data.data.code; //商品编号

                this.goodsAttr = res.data.data.GoodsXdt; 
                this.zhushiList = this.goodsAttr.extra_goods_luozuan //下单通主石
                this.caiziList = this.goodsAttr.extra_goods_materials //下单通材质
                this.shoucunList = this.goodsAttr.extra_goods_size.values //下单通手寸
                this.shoucun = this.goodsAttr.extra_goods_size.label
                console.log(this.shoucunList)
            }).catch(error => {
                mui.alert(error)
            })
        },
        methods: {
            liListClick (index) {
                this.isactive = index;
            },
            changeshape (index) {
                this.isActive = index;
            },
            
            buttom_alert() {
                this.detailsShow = false;
                this.isShow = false;
            },

            showShouCun () {
                var obj = [];
                for (var i in this.shoucunList) {
                    var tmp = {value:this.shoucunList[i],text:this.shoucunList[i]};
                    obj.push(tmp);
                }
                picker.setData(obj)
                picker.show(function (SelectedItem) {
                    console.log(SelectedItem);
                })
            },

            // 下单通在线配石
            xtdPeishi () {
                var that = this
                axios({
                    url: __apiurl + '/goods/getxdtmatch',
                    method: "get",
                    params: {
                        weight: that.weight
                    }
                }).then(res => {
                    that.peishiList = res.data;
                    console.log(that.peishiList)
                    
                })
            }
        }
    });
    $('.addcart').click(function () {
        vm.addcart();
    });
    $('.collect').click(function () {
        vm.collect();
    });
    $('.shop_now').click(function () {
        vm.type = 1;
        vm.addcart();
    })

    //判断是否在数组里面
    function in_array(search, array) {
        for (var i in array) {
            if (array[i] == search) {
                return true;
            }
        }
        return false;
    }
</script>

</html>