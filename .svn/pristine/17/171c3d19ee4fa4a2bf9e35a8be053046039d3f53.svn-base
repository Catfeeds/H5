<script>
    //判断是否在数组里面
    function in_array(search, array) {
        for (var i in array) {
            if (array[i] == search) {
                return true;
            }
        }
        return false;
    }

    var vm = new Vue({
        el: '#diamond',
        data() {
            return {
                isShowTitle: true,
                isShowTitle01: false,
                isOk: false,
                isOk01: false,
                isShow: true,
                isShow01: false,
                detailsShow: false,
                diamondList: [], //白钻数据
                diamondColorList: [], //彩钻数据
                goodsId: '',
                papvals: [],
                attrObj: [],
                addList: '',
                page: 1,
                cartnum: 0,
                listObj: '',
                token: '',
                showImg: false,
                str: '',
                goodsIdList: [],
            }
        },
        filters: {
            //保留2位小数点过滤器 不四舍五入
            number(value) {
                let toFixedNum = Number(value).toFixed(3);
                let realVal = toFixedNum.substring(0, toFixedNum.toString().length - 1);
                return realVal;
            }
        },
        created() {
            /*获取token*/
            this.token = getCookie('Token');
            var _this = this;
            this.id = getUrlParam("category_id");
            /*白钻数据*/
            axios.get(__apiurl + '/goods/diamond', {
                params: {
                    goods_attr_filter: 'type:0',
                    page: this.page
                }
            }).then(response => {
                _this.diamondList = response.data.data.data;
                _this.page = response.data.data.page;

            }).catch(error => {
                mui.alert(error);
            });
            //收藏数据
            axios({
                method: 'POST',
                url: __apiurl + '/user/getUserGoodsCollectionList',
                headers: {
                    Accept: "application/json; charset=utf-8",
                    Token: this.token
                }
            }).then(res => {
                var _this = this;
                var aa = [];
                if (res.data.status == 100) {
                    this.dataList = res.data.data.data;
                    for (var i in this.dataList) {
                        aa.push(this.dataList[i].goods_id);
                        _this.goodsIdList = aa;
                        // console.log(  _this.goodsIdList)
                    }
                }
            }).catch(error => {
                mui.alert(error)
            })

        },
        methods: {

            clickImg() {
                this.isOk = true;
            },
            clickImg01() {
                this.isOk01 = true;
            },
            w_mask() {
                this.isOk = false;
            },
            //白钻搜索确定
            confirm() {
                var _this = this;
                _this.str = '';
                for (var index in _this.attrObj) {
                    for (var i in _this.attrObj[index]) {
                        var tmp = _this.attrObj[index][i].substr(1);
                        if (tmp) {
                            _this.str += i + ':' + tmp + ';';
                        }
                    }
                }

                /*筛选后接口数据*/
                axios.get(__apiurl + '/goods/diamond', {
                    params: {
                        // goods_attr_filter: 'Shape:ROUND;Weightinterval:0.90-1.2;type:0' //拼接数据格式
                        goods_attr_filter: _this.str + 'type:0;'
                    }
                }).then(response => {
                    if (response.data.data.data == '') {
                        mui.alert('该条件没有数据')
                    } else {
                        _this.diamondList = response.data.data.data;
                    }
                }).catch(error => {
                    mui.alert(error);
                });
                _this.isOk = false; //关闭这个搜索页
            },
            //彩钻搜索确定
            confirm01() {
                // this.isOk01 = false;
                let _this = this;
                _this.str = '';
                for (var index in _this.attrObj) {
                    for (var i in _this.attrObj[index]) {
                        var tmp = _this.attrObj[index][i].substr(1);
                        if (tmp) {
                            _this.str += i + ':' + tmp + ';';
                        }
                    }
                }
                // if (!_this.str) {
                //     mui.alert('未选择数据');
                //     return false;
                // }
                /*筛选后接口数据*/
                axios.get(__apiurl + '/goods/diamond', {
                        params: {
                            // goods_attr_filter: 'Shape:ROUND;Weightinterval:0.90-1.2;type:0'
                            goods_attr_filter: _this.str + 'type:1;'
                        }
                    }).then(response => {
                        _this.diamondColorList = response.data.data.data;
                        if (response.data.data.data == '') {
                            mui.alert('该条件没有数据')
                        } else {
                            _this.diamondColorList = response.data.data.data;
                            _this.page = response.data.data.page;
                            //滚动事件触发
                            var page = _this.page;
                            var colorStr = _this.str;
                            window.onscroll = function () {
                                if (getScrollTop() + getClientHeight() == getScrollHeight()) {
                                    setTimeout(function () {
                                        _this.showImg = true;
                                    }, 1000)
                                    page++;
                                    /*彩钻数据*/
                                    axios.get(__apiurl + '/goods/diamond', {
                                        params: {
                                            goods_attr_filter: colorStr + 'type:1',
                                            page: page
                                        }
                                    }).then(response => {
                                        if (response.status == 200) {
                                            _this.showImg = false;
                                            var diamondList01 = response.data.data.data;
                                            _this.diamondColorList = _this.diamondColorList.concat(
                                                diamondList01)
                                        }

                                    }).catch(error => {
                                        mui.alert(error);
                                    });
                                }
                            }

                        }
                    })
                    .catch(error => {
                        mui.alert(error);
                    });
