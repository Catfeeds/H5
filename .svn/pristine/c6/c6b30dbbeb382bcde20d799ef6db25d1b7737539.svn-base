<!DOCTYPE html>
<html>

<head>
    {include file="public/base" /}
</head>
<style>
	body, .mui-content {
	    background: #efeff4;
	}
	#myform{
		text-indent: 30px;
		background: #f3a1b6;
	    font-size: 14px;
	    color: white;
	}
	.mui-search .mui-placeholder .mui-icon {
	    color: white;
	}
	.mui-search .mui-placeholder {
	    color: white;
	    font-size: 12px;
	}
    .swiper-container{
        font-size: 12px;
    }
    .swiper-container a{
        color: #8f8f94;
    }
    .fixtype_box {
	    height: 100px;
	    background-color: white;
	    position: relative;
	    top: -15px;
	    z-index: 2;
	    border-radius: 15px;
	    margin: 0 10px;
	    box-shadow: 1px 1px 1px #999;
	}
	.fixtype_title {
	    float: left;
	    width: 100%;
	}
	.fixtype_title span:first-child {
	    font-size: 12px;
	    float: left;
	    padding-left: 8px;
	}
	.fixtype_content ul {
	    float: left;
	    width: 100%;
	    padding-top: 10px;
	}
	.fixtype_content li {
	    float: left;
	    width: 25%;
	    text-align: center;
	    
	}
	.fixtype_content li img{
		width: 55px;
		height: 55px;
		border-radius: 50%;
		background: #f9f9f9;
	}
	.fixtype_content li .fixtype_title{
		color: gray;
		font-size: 12px;
		margin-top: 5px;
	    height: 15px;
    	line-height: 15px;
	}
	.swiper-pagination-bullet-active {
	    opacity: 1;
	    background: #ef5a80;
	}
	
	.wrap_01{
		padding: 10px;
		background: white;
    }

</style>

<body>
<div id="page_01">
    <header class="mui-bar mui-bar-nav" style="background: #f786a3;">
        <div class="mui-input-row mui-search">
            <input type="search" placeholder="搜索商品" class="mui-input-clear" v-model="inputValue" id="myform" >
        </div>
        <div class="down_box">
            <ul>
                <li @click="zuanshi">钻石</li>
                <li @click="zhubao">成品珠宝</li>
            </ul>
        </div>
    </header>

    <div class="mui-content">
        <!--首页轮播-->
        <div class="swiper-container swiper-container_01">
            <div class="swiper-wrapper">
                {volist name=":tfilter($templateitem,'slide')" id="vo"}
                <div class="swiper-slide"><a href="{$vo.url}"><img src="{$vo.images}"/></a></div>
                {/volist}
            </div>
            <!-- 如果需要分页器 -->
            <div class="swiper-pagination"></div>
        </div>

        <div class="fixtype_box">
			<div class="fixtype_content">
				<ul class="">
		            {volist name=":tfilter($templateitem,'nav')" id="vo" key="k"}
		            {elt name="k" value="4"}
		            <li class="">
		                <a href="{$vo.url}">
		                    <img class="width_style" src="{$vo.images}" alt="">
		                    <div class="fixtype_title">{$vo.title}</div>
		                </a>
		            </li>
		            {/elt}
		            {/volist}
		        </ul>
			</div>
        </div>
        <div class="wrap_01">
            <div class="new_goods">
                <p>新品上线</p>
                <p><span>献上爱礼，赞颂生活的美好</span></p>
            </div>
            <!--中间轮播-->
            <div class="swiper-container swiper-container_02">
                <div class="swiper-wrapper" >
                    {web:goods cat='new' num='8'}
                    <div class="swiper-slide">
                    	<a href="{:url('mobile/goods/details')}?id={$vo.id}">
                    		<img src="{$vo.thumb}" alt="无图({$vo.name})">
                    		<span>{$vo.name}</span>
                    		<span>￥{$vo.price}</span>
                    		
                    	</a>
                    </div>
                    {/web:goods}
                </div>
                <!-- 如果需要分页器 -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <!--中间图片-->
        <div class="m_img">
            {volist name=":tfilter($templateitem,'newad')" id="vo" key="k"}
            {eq name="k" value="1"}
            <a href="{$vo.url}"><img alt="" src="{$vo.images}"/></a>
            {/eq}
            {/volist}
        </div>

        <div class="wrap_01">
            <div class="new_goods">
                <p>商城热卖</p>
                <p><span>献上爱礼，赞颂生活的美好</span></p>
            </div>
            <!--中间轮播-->
            <div class="swiper-container swiper-container_02">
                <div class="swiper-wrapper">
                    {web:goods cat='hot' num='8'}
                    <div class="swiper-slide">
                    	<a href="{:url('mobile/goods/details')}?id={$vo.id}">
                    		<img src="{$vo.thumb}" alt="无图({$vo.name})">
                    		<span>{$vo.name}</span>
                    		<span>￥{$vo.price}</span>
                    	</a>
                    </div>
                    {/web:goods}
                </div>
                <!-- 如果需要分页器 -->
                <div class="swiper-pagination"></div>
            </div>
        </div>

        <!--中间图片-->
        {volist name=":tfilter($templateitem,'hotad')" id="vo" key="k"}
        {elt name="k" value="2"}
        <div class="m_img">
            <a href="{$vo.url}"><img alt="" src="{$vo.images}"/></a>
        </div>
        {/elt}
        {/volist}
        <div style="width: 100%;height: 60px"></div>
    </div>
</div>
{include file="public/nav" /}
</body>
<script>
    mui.init();
   // mui.previewImage();
    new Vue({
        el: '#page_01',
        data:{
            inputValue:''
        },
        methods:{
            zuanshi(){
                window.location.href = "{:url('goods/searchgoodslist')}?keyword="+this.inputValue+'&type=0'
            },
            zhubao(){
                window.location.href = "{:url('goods/searchgoodslist')}?keyword="+this.inputValue+'&type=3'
            }
        }
    })
    // mui('body').on('tap','a',function(){document.location.href=this.href;});
    /*swiper_01 */
    var mySwiper1 = new Swiper('.swiper-container_01', {
        direction: 'horizontal',
        loop: true,
        //自动播放
        autoplay: {
            delay: 3000,
            stopOnLastSlide: false,
            disableOnInteraction: true,
        },
        // 如果需要分页器
        pagination: {
            el: '.swiper-pagination',
        }

    });
    /*swiper_02 */
    var mySwiper2 = new Swiper('.swiper-container_02', {
        slidesPerView: 3,
        autoplay: false,
        loop: false,
    });
    //搜索功能

    $('#myform').click(function () {
        $('.down_box').toggle(500);
    })

	/*监听丢失的图片*/

	$("img").on('error',function(){
		$(this).attr('src','__IMG__/zuanjie.png');
	})


</script>


</html>