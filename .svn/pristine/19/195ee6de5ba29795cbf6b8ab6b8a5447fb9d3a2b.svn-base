<!DOCTYPE html>
<html>

<head>
    {include file="public/base" /}
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" href="__CSS__/user.css?__Version__" />
</head>

<body>
<div id="chongzhi">


    <header class="mui-bar mui-bar-nav">
        <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
        <h1 class="mui-title">重置密码</h1>
    </header>
    <div class="mui-content" id="reset-passwords">
        <ul class="authU bgcolor">
            <li>
                <input type="number" placeholder="请输入手机号" v-model="username">
            </li>
            <li>
                <input type="text" placeholder="短信验证码" style="width:60%" v-model="mobliecode">
                <button @click="getcode">获取验证码</button>
            </li>
        </ul>
        <ul class="authU bgcolor">
            <li>
                <input type="password" placeholder="请输入密码" v-model="password">
            </li>
            <li>
                <input type="password" placeholder="请再次输入密码" v-model="password01">
            </li>
        </ul>
        <div class="quit rest"><button type="button" @click="subBtn" class="quit_btn rest_btn">重置密码</button></div>
        <p style="text-align: center;">温馨提示：目前只能针对已经绑定手机号的用户重置密码</p>
    </div>
</div>
</body>

</html>
<script>
    new Vue({
        el: '#chongzhi',
        data: {
            username: '',
            password: '',
            mobliecode: '',
            password01:''
        },
        methods: {
            subBtn() {
                //手机号码验证
                if (!(/^1[34578]\d{9}$/.test(this.username))) {
                    mui.alert("手机号码格式有误，请重填");
                    return false;
                }
                //密码验证
                if(!(/^[\w]{6,20}$/.test(this.password))){
                    mui.alert("密码格式有误，请重填");
                    return false;
                }
                if(this.password!=this.password01){
                    mui.alert('两次密码输入的不一致')
                }
                axios({
                    method: 'POST',
                    url: __apiurl + '/com/fgword',
                    headers: {
                        Accept: "application/json; charset=utf-8",
                        Token: this.token
                    },
                    params: {
                        username: this.username,
                        password: this.password,
                        mobliecode: this.mobliecode
                    }
                }).then(response => {
                    console.log(response)
                    if(response.data.status==-1){
                        mui.alert(response.data.msg)
                    }
                    if(response.data.status==100){
                        mui.alert(response.data.msg,function () {
                            window.location.href="{:url('com/login')}";
                        })
                    }
                }).catch(error => {
                    alert(error);
                })
            },
            getcode(){
                axios({
                    method:'POST',
                    url:__apiurl+'/com/sendcode',
                    data:{
                        username:this.username,
                        type:'forget_pwd_sms_enable'
                    }
                }).then(res=>{
                    // console.log(res)
                    mui.alert(res.data.msg)
                }).catch(error=>{
                    // console.log(error)
                })
            }
        }
    })
</script>