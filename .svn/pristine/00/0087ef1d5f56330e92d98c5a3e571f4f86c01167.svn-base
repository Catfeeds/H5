			                        id:obj.id
			                    }
			                    
			                }).then(res => {
			                	console.info(res);
			                  	console.info(this.token);
			                    if(res.status==200){
			                        this.addressList.splice(index, 1);
			                        mui.toast("删除成功");
			                    }
			                }).catch(error => {
			                	
			                  	mui.alert(error)
			                })
						}
                   	
                   })                
            }*/
            deleteAdress: function (index, obj) {
                axios({
                    method: 'post',
                    url: __apiurl2 + '/user/delAddress',
                    headers: {
                        Accept: "application/json; charset=utf-8",
                        Token: this.token,
                        Aid: getAId()
                    },
                    data: {
                        id: obj.id
                    }

                }).then(function (res) {
                    console.info(res);
                    console.info(this.token);
                    if (res.status == 200) {
                        this.addressList.splice(index, 1);
                        mui.toast("删除成功");
                    }
                }).catch(function (error) {
                    mui.alert(error)
                })
            }
        }
    });
</script>

